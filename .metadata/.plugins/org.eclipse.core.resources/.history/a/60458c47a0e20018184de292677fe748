				String p1 = passwordField.getText().toString();
				if(u.isEmpty() || p.isEmpty() || p1.isEmpty()) {
					confirm.setText("Enter all the details required!!!");
					confirm.setVisible(true);
				}else {
					    if(p.equals(p1)) {
					    	SinupData sd = new SinupData();
						    sd.insert(u,p);
							LogIn l = new LogIn();
							l.setVisible(true);
